    {/* Progress Bars for Units and Courses */}
    <div className="grid grid-cols-1 md:grid-cols-2 gap-4 mt-4">
      {/* Units Progress */}
      <div>
        <div className="flex justify-between items-center mb-1">
          <span className="text-xs text-text2">Units Progress</span>
          <span className="text-xs font-medium text-text">
            {totalUnits} / {registrationRules.maxUnits} units
          </span>
        </div>
        <div className="w-full bg-gray-200 dark:bg-gray-800 rounded-full h-2">
          <div 
            className={`h-2 rounded-full transition-all duration-500 ${
              totalUnits >= registrationRules.minUnits && totalUnits <= registrationRules.maxUnits 
                ? 'bg-green-500' 
                : 'bg-red-500'
            }`}
            style={{ 
              width: `${Math.min(100, (totalUnits / registrationRules.maxUnits) * 100)}%` 
            }}
          >
            {/* Min units marker */}
            <div 
              className="absolute w-1 h-3 -mt-0.5 bg-blue-500 rounded-sm"
              style={{ 
                marginLeft: `${(registrationRules.minUnits / registrationRules.maxUnits) * 100}%` 
              }}
            ></div>
          </div>
        </div>
        <div className="flex justify-between text-xs text-text2 mt-1">
          <span>Min: {registrationRules.minUnits}</span>
          <span>Max: {registrationRules.maxUnits}</span>
        </div>
      </div>

      {/* Courses Progress */}
      <div>
        <div className="flex justify-between items-center mb-1">
          <span className="text-xs text-text2">Courses Progress</span>
          <span className="text-xs font-medium text-text">
            {courseCount} / {registrationRules.maxCourses} courses
          </span>
        </div>
        <div className="w-full bg-gray-200 dark:bg-gray-800 rounded-full h-2">
          <div 
            className={`h-2 rounded-full transition-all duration-500 ${
              courseCount >= registrationRules.minCourses && courseCount <= registrationRules.maxCourses
                ? 'bg-green-500' 
                : 'bg-red-500'
            }`}
            style={{ 
              width: `${Math.min(100, (courseCount / registrationRules.maxCourses) * 100)}%` 
            }}
          >
            {/* Min courses marker */}
            <div 
              className="absolute w-1 h-3 -mt-0.5 bg-blue-500 rounded-sm"
              style={{ 
                marginLeft: `${(registrationRules.minCourses / registrationRules.maxCourses) * 100}%` 
              }}
            ></div>
          </div>
        </div>
        <div className="flex justify-between text-xs text-text2 mt-1">
          <span>Min: {registrationRules.minCourses}</span>
          <span>Max: {registrationRules.maxCourses}</span>
        </div>
      </div>
    </div>